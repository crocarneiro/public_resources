	// "postCreateCommand": "docker --version",

	"extensions": [
		"maelvalais.autoconf",
		"ms-vscode.cpptools",
		"wakatime.vscode-wakatime"
	],
	"settings": {
		"terminal.integrated.shell.linux": "/bin/bash"
	}
}